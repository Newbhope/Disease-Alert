<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/mumps"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_dark"
            android:text="Mumps"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text = "Mumps virus is the causative agent of mumps, a well-known common childhood disease characterised by swelling of the parotid glands, salivary glands and other epithelial tissues, causing high morbidity and in some cases more serious complications such as deafness. The virus is transmitted by direct contact, droplet spread, or contaminated objects. It is considered a vaccine-preventable disease, although significant outbreaks have occurred in recent years in developed countries such as America, in areas of poor vaccine uptake. The mumps virus belongs to the genus Rubulavirus in the family Paramyxovirus."
            />
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/plus1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/plus"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/spread"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How it spreads"
                android:textStyle="bold"
                android:textSize="17sp"
                android:clickable="true" />
        </LinearLayout>
        <TextView
            android:id="@+id/spread1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By airborne respiratory droplets (coughs or sneezes)"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/spread2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By saliva (kissing or shared drinks)"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/spread3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By touching a contaminated surface (blanket or doorknob)"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/plus2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/plus"
                />
            <TextView
                android:id="@+id/sym"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptoms"
                android:textStyle="bold"
                android:textSize="17sp"
                android:clickable="true"/>
        </LinearLayout>
        <TextView
            android:id="@+id/sym1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fever"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/sym2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Headache"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/sym3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muscle aches"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/sym4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiredness"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/sym5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loss of apetite"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/plus3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/plus"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/treat"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treatments"
                android:textStyle="bold"
                android:textSize="17sp"
                android:clickable="true"/>
        </LinearLayout>
        <TextView
            android:id="@+id/treat1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treatment focuses on symptom relief. Recovery takes about two weeks. The disease can be prevented by the MMR vaccine."
            android:visibility="gone"/>
        <TextView
            android:id="@+id/treat2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anti-inflammatory: Naproxen (Aleve), Ibuprofen (Advil)"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/treat3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pain reliever: Acetaminophen (Tylenol)"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/treat4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soothing remedies: Bed rest"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/treat5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other treatments: MMR vaccine"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>